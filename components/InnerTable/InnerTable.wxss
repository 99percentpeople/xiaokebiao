/* components/InnerTable/InnerTable.wxss */
@import "/app.wxss";

.table {
  height: 100%;
  width: 100%;
}

.boundary {
  width: 80%;
  left: 50%;
  position: absolute;
  transform: translateX(-50%);
}

.kb-item {
  position: absolute;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  border-radius: 10rpx;
  overflow: hidden;
  background-color: rgba(0, 0, 0, .2);
}

.kcmc {
  overflow: hidden;
  height: 80%;
  text-align: center;
}

.jxcdmc {
  overflow: hidden;
  width: 100%;
  height: 20%;
  text-align: center;
}

.loading{
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}