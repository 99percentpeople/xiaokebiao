/* components/ClassTable/ClassTable.wxss */
@import "/app.wxss";

.class-table {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  height: 100%;
}

.scroll-bar {
  width: 30rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.aaa {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100%;
}

.swiper {
  width: 100%;
  height: 100%;
}

.card {
  width: 500rpx;
  height: 800rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}


.card-page{
  height: 700rpx;
  overflow: scroll;
}

.tabbar {
  position: sticky;
  bottom: 0;
}

.color-picker{
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
  
}
